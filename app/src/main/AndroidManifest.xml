<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/witchhat"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PotterVerse"
        tools:targetApi="31">
        <activity
            android:name=".views.activities.CharacterDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_character_details"
            android:theme="@style/Theme.PotterVerse" />
        <activity
            android:name=".views.activities.BookDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.MovieDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".views.MainActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>